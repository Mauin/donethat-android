<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="trip" type="com.mtramin.donethat.data.model.Trip"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/default_margin"
        android:paddingLeft="@dimen/default_margin"
        android:paddingRight="@dimen/default_margin"
        android:paddingTop="@dimen/default_margin">

        <TextView
            android:id="@+id/trip_deatil_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:textSize="@dimen/textsize_header"
            android:text="@{trip.title}"
            tools:text="DONE THAT!" />

        <TextView
            android:id="@+id/trip_deatil_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/small_margin"
            android:textSize="@dimen/textsize_large"
            android:text="@{trip.content}"
            tools:text="Awesome trip to awesomeville" />

    </LinearLayout>
</layout>
