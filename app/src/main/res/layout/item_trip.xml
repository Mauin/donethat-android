<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trip_item"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/default_margin"
    android:layout_marginRight="@dimen/default_margin"
    android:layout_marginTop="@dimen/not_so_small_margin"
    android:layout_marginBottom="@dimen/not_so_small_margin"
    card_view:cardCornerRadius="4dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/trip_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_size"
            android:scaleType="centerCrop"
            tools:src="@drawable/header"/>

        <View
            android:id="@+id/trip_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_size"
            android:background="@color/secondary_light"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:elevation="@dimen/default_elevation"
            android:background="@color/white"
            android:padding="@dimen/default_margin">

            <TextView
                android:id="@+id/trip_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_large"
                tools:text="My super awesome trip" />

            <TextView
                android:id="@+id/trip_created_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/small_margin"
                tools:text="Lorem ipsum, something something." />
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>

